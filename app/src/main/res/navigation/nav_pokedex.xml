<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_pokedex"
    app:startDestination="@id/firstDestination">

    <fragment
        android:id="@+id/firstDestination"
        android:name="com.example.pokedex.view.PokedexHomeFragment"
        android:label="fragment_pokedex_home"
        tools:layout="@layout/fragment_pokedex_home" >
        <action
            android:id="@+id/action_firstDestination_to_pokedexDetailsFragment"
            app:destination="@id/pokedexDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/pokedexDetailsFragment"
        android:name="com.example.pokedex.view.PokedexDetailsFragment"
        android:label="fragment_pokedex_details"
        tools:layout="@layout/fragment_pokedex_details" >
        <argument
            android:name="pokemon"
            app:argType="com.example.pokedex.data.Pokemon" />
        <action
            android:id="@+id/action_pokedexDetailsFragment_to_pokedexCapturedFragment"
            app:destination="@id/pokedexCapturedFragment" />

    </fragment>
    <fragment
        android:id="@+id/pokedexCapturedFragment"
        android:name="com.example.pokedex.view.PokedexCapturedFragment"
        android:label="fragment_pokedex_captured"
        tools:layout="@layout/fragment_pokedex_captured" />

</navigation>